{
  "name": "@darksoil-studio/file-storage-zome",
  "version": "0.400.0",
  "description": "File storage utilities to store and retrieve files in a holochain DHT",
  "author": "guillem.cordoba@gmail.com",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./dist/*": "./dist/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darksoil-studio/file-storage.git"
  },
  "files": ["dist", "src"],
  "scripts": {
    "start": "vite --clearScreen false --port $UI_PORT",
    "build": "pnpm lint && tsc && pnpm localize:build && pnpm analyze",
    "localize:build": "lit-localize build",
    "lint": "eslint src",
    "analyze": "cem analyze --litelement --exclude dist",
    "format": "eslint src --fix"
  },
  "dependencies": {
    "@holochain/client": "^0.18.0",
    "@lit-labs/task": "^2.0.0",
    "@lit/context": "^1.0.0",
    "@lit/localize": "^0.12.0",
    "@mdi/js": "^7.4.47",
    "@scoped-elements/dropzone": "^0.2.1",
    "@shoelace-style/shoelace": "^2.11.0",
    "@tnesh-stack/elements": "^0.400.0",
    "@tnesh-stack/utils": "^0.400.0",
    "idb-keyval": "^6.2.1",
    "js-base64": "^3.7.7",
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.3",
    "@lit/localize-tools": "^0.6.3",
    "@types/lodash-es": "^4.17.5",
    "@types/node": "14.11.1",
    "tslib": "^2.0.0",
    "typescript": "^5.4.0",
    "vite": "^4.0.4",
    "vite-plugin-checker": "^0.5.3"
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "publishConfig": {
    "access": "public"
  },
  "customElements": "custom-elements.json",
  "type": "module"
}
